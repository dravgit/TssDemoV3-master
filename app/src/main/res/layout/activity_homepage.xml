<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:background="@drawable/bg"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:clickable="false"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/m_idcard"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_horizontal|center"
                    android:background="@drawable/id0card"
                    android:onClick="showICCard" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/m_passport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showPassport"
                    app:srcCompat="@drawable/passport" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/m_passport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="showPassport"
                    app:srcCompat="@drawable/passport" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/m_driver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="showDriver"
                    app:srcCompat="@drawable/cdriver" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:background="#3d7dd5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/m_printer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="showPrinter"
                    app:srcCompat="@drawable/printer" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:background="#FF0256AB"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/imastercard" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:background="#3d7dd5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/visa" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>